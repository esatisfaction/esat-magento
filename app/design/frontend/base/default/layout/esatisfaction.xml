<?xml version="1.0"?>
<layout>
    <default>
        <!-- Header Script -->
        <reference name="head">
            <block 
				type="core/template" 
				name="esatisfaction.head" 
				template="esatisfaction/header.phtml" 
			/>
        </reference>
		<!-- Footer Script -->
		<!-- Add before_body_end in case jquery is loaded -->
        <reference name="before_body_end">
            <block 
				type="core/template" 
				name="esatisfaction.before_body_end" 
				template="esatisfaction/before_body_end.phtml" 
			/>
        </reference>
    </default>
	<!-- Success Page Scripts-->
    <checkout_onepage_success>
		<reference name="before_body_end">
            <block 
				type="esatisfaction/checkout_success" 
				name="esatisfaction.checkout.success" 
				template="esatisfaction/checkout_success.phtml"
			/>
        </reference>
	</checkout_onepage_success>
</layout>
